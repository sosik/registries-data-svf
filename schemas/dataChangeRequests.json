			"table": "dataChangeRequests",
			"security": {
				"create": {
					"static": [
						"Requests - write - KM"
					]
				},
				"read": {
					"static": [
						"Requests - read - KM"
					]
				},
				"modify": {
					"static": [
						"Requests - write - KM"
					]
				}
			},
			"fireEvents": {
				"create": "event-data-request-created",
				"update": "event-data-request-updated"
			},
			"properties": {
				"peopleObjLink": {
					"title": "Osoba",
					"transCode": "schema.people.title",
					"type": "object",
					"properties": {
						"people": {
							"transCode": "schema.people.title",
							"type": "object",
							"required": true,
							"objectLink2": {

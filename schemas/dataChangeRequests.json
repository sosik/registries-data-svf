				},
				"officer": {
					"extends": "uri://registries/people#blocks/officer",
					"properties": {
						"association": null,
						"note": null,
						"expiration": null
					}
				},
				"photoInfo": {
					"title": "Fotografie",
					"transCode": "schema.people.photoInfo",
					"type": "object",
					"properties": {
						"photo": {
							"title": "Fotografia",
							"transCode": "schema.people.photo",
							"type": "string",
							"render": {
								"component": "psui-uploadable-image",
								"height": 330,
								"width": 230
							}
						}
					}
				},
				"otherInfo": {
					"extends": "uri://registries/people#blocks/otherInfo",
					"properties": {
						"idCardNumber": null,
						"passportNumber": null,
						"language":null,
						"note": {
							"render": {
								"component": "psui-textarea"
							}
						}
					}
				},
				"attachments": {
					"$ref": "uri://registries/generalRequests#blocks/attachments"
				},
				"requestData": {
					"extends": "uri://registries/generalRequests#blocks/requestData",
					"properties":{
						"subject": null,
						"text": null,
						"responseText": null,
						"applicant": {
							"readOnly": true
						},
						"clubApplicant": {
							"readOnly": true
						},
						"assignedTo": {
							"readOnly": true
						},
						"setupDate": {
							"readOnly": true
						},
						"status": {
							"readOnly": true
						}
					}

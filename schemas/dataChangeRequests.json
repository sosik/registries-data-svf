								"fields": {
									"surName": "baseData.surName",
									"name": "baseData.name",
									"registrationID": "baseData.registrationID"
								}
							}
						}
					}
				},
				"baseData":{
					"extends": "uri://registries/people#blocks/person",
					"properties": {
						"registrationID": null,
						"id": {
							"required": false,
							"unique": null
						},
						"name": {
							"required": false
						},
						"surName": {
							"required": false
						},
						"bornName": null,
						"titleAfter": null,
						"birthDate": {
							"required": false
						},
						"gender": {
							"required": false
						},
						"titleBefore": null,
						"nationality": {
							"required": true
						},
						"stateofPerson": null
					}
				},
				"player": {
					"extends": "uri://registries/people#blocks/player",
					"properties": {
						"isPlayer":{
							"required": false
						},
						"playerLicense": null,
						"expirationOfAgentContract": null,
						"expiration": null,
						"clubOfFirstRegistration": null,
						"dateOfExpiration": null,
						"dateOfApplicationForId": null,
						"club": null,
						"stateOfPlayer":{
							"required": false
						},
						"modifiedOn": null

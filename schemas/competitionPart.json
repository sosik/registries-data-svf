			}
		},
		"listOfTeam": {
			"title": "Zoznam družstiev",
			"transCode": "schema.competitionPart.listOfTeam",
			"type": "object",
			"render": {
				"width": "full"
			},
			"properties": {
				"team": {
					"title": "Družstvá",
					"transCode": "schema.competitionPart.listOfTeam.team",
					"type": "array",
					"items": {
						"team": {
							"type": "object",
							"title": "Družstvo",
							"transCode": "schema.competitionPart.listOfTeam.team",
							"objectLink2": {
								"schema":"uri://registries/rosters#views/rosters/view",
								"fields":{
									"name": "baseData.prName"
								}
							}
						}
					}
				}
			}
		}
	},

	"models":{

				},
				"listOfTeam":{
					"extends":"uri://registries/competitionPart#blocks/listOfTeam"
				}
			}
		}
	},

	"views":{
		"competitionPart":{
			"new":{
				"extends":"uri://registries/competitionPart#models/competitionPart"
			},
			"view":{
				"extends":"uri://registries/competitionPart#models/competitionPart",
